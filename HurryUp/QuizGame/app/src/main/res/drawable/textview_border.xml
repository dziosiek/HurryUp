<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1.3dip" android:color="#71795e" />
            <gradient android:angle="-90" android:startColor="#4f5934" android:endColor="#8e9a68"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5e7079" />
            <solid android:color="#587385"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5e6e79" />
            <gradient android:angle="-90" android:startColor="#8da9ba" android:endColor="#587785" />
        </shape>
    </item>
</selector>