<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewGame">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="20dp"
            android:id="@+id/timer_id"
            android:layout_width="94dp"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="46dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/answer_a_id"
            android:layout_width="245dp"
            android:layout_height="39dp"
            android:layout_below="@+id/question_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/answer_d_id"
            android:layout_width="245dp"
            android:layout_height="39dp"
            android:layout_below="@+id/answer_c_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="63dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/answer_c_id"
            android:layout_width="245dp"
            android:layout_height="39dp"
            android:layout_below="@+id/answer_b_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/answer_b_id"
            android:layout_width="245dp"
            android:layout_height="39dp"
            android:layout_below="@+id/answer_a_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/question_id"
            android:layout_width="265dp"
            android:layout_height="84dp"
            android:layout_below="@+id/timer_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="49dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

        <TextView
            android:id="@+id/points_id"
            android:layout_width="112dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical|center_horizontal"
            android:text="TextView"
            android:textSize="20dp" />
    </RelativeLayout>
</FrameLayout>